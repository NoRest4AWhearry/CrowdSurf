<%= form_for @event do |f| %>
  <div><%= f.label :title %><br/>
    <%= f.text_field :title, maxlength: 80, placholder: 'Give your event a title' %></div>

  <div><%= f.label :flyer %><br/>
    <%= f.file_field :flyer %></div>

  <div><%= f.label 'Location' %><br/>
    <%= f.text_field :location_name, placeholder: 'Name of venue' %></div>

  <div><%= f.label :street %><br/>
    <%= f.text_field :street, placeholder: 'Address line' %></div>

  <div><%= f.label :state %><br/>
    <%= f.collection_select(:state_id, State.order(:name), :id, :name, {prompt: 'Select a state or province'}) %></div>

  <div><%= f.label :city %><br/>
    <%= f.grouped_collection_select(:city_id, State.order(:name), :cities, :name, :id, :name,
                                    {prompt: 'Select a city'}) %></div>

  <div><%= f.label :zip %><br/>
    <%= f.text_field :zip, maxlength: 5, placeholder: 'Zip' %></div>

  <div><%= f.label :start %><br/>
  <%= f.datetime_select(:start, minute_step: 5, ampm: true, prompt: true) %></div>

  <div><%= f.label :end %><br/>
    <%= f.datetime_select(:end, minute_step: 5, ampm: true, prompt: true) %></div>

  <div><%= f.label :category_id %><br/>
    <%= f.collection_select(:category_id, Category.order(:name), :id, :name, {prompt: 'Select one'}) %></div>

  <div><%= f.label 'Youtube Video ID' %><br/>
    <%= f.text_field :youtube_id %></div>

  <div><%= f.label :details %><br/>
    <%= f.text_area :details, rows: 15, placholder: 'Tell people aobut your event and what makes it special!' %></div>

  <%= f.submit %>
<% end %>